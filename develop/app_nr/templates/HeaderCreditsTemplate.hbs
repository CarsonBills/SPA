<div class="modal-container">
    <div class="modal-header">
        <a class="close" data-dismiss="modal"><span class="glyphicon glyphicon-remove-2"></span></a>
        <div class="modal-title">{{{title}}}</div>
    </div>
    <div class="modal-body">
        <div class="credits">
            <div class="photo-source">
                <h2>{{photoSource.head}}</h2>
                {{#each photoSource.credits}}
                <p>{{this}}</p>
                {{/each}}
            </div>
            
            <div class="book-team">
                <h2>{{bookTeam.head}}</h2>
                {{#each bookTeam.credits}}
                <p>{{this}}</p>
                {{/each}}
            </div>
        </div>
    </div>
</div>


