<div class="modal-container">
    <div class="modal-arrow-container prev-page">
        {{#if prevId}}
            <div class="glyphicon glyphicon-chevron-left modal-arrow" id="prevArticle" data-prev-id="{{prevId}}" data-id="{{id}}"></div>
        {{/if}}
    </div>
    <div class="modal-header">
        <a class="close" data-dismiss="modal"><span class="glyphicon glyphicon-remove-2"></span></a>
        <div class="modal-author">
            {{{HBAuthors data.author}}}
        </div>
        <div class="modal-title">{{{HBTrim data.title 50}}}</div>
    </div>
    <div class="modal-body">
        <p class="excerpt">{{{data.excerpt}}}</p>

        <div class="modal-utils" data-item-id='{{id}}'>
            <button data-type="reader-button" class="savelist-lnk" data-item-id='{{id}}'><span class=" glyphicon {{HBFaved faved 'glyphicon-minus' 'glyphicon-plus'}}"></span><span class="button-label">{{HBFaved faved "Remove list" "Save to list"}}</span></button>
            {{#if data.ebookLink}}
                <button data-type="reader-button" class="ebook-lnk" href="{{data.ebookLink}}" target="_blank"><span class="icon"></span><span class="button-label">View Ebook</span></button>
            {{/if}}
        </div>

        <div class="misc">
            <p class="about-author">About {{{mainAuthorName}}}</p>
            <p class="author-bio">{{{mainAuthorBio}}}</p>

            {{#if data.author.0.website}}
                <button data-type="reader-button" class="moreinfo-lnk"><a href="{{data.author.0.website}}" target="_blank">More on Author</a></button>
            {{/if}}

            <p class="page-number">Page {{data.readingNumber}}</p>
            <p class="pub-date">Published on {{data.publicationDate}}</p>
            <p class="page-filters">
                {{#each data.filters}}
                     <span class="page-filter">{{{HBDetailFilters this}}}</span>
                {{/each}} 
            </p>
        </div>

    </div>
    <div class="modal-arrow-container next-page">
        {{#if nextId}}
            <div class="glyphicon glyphicon-chevron-right modal-arrow" id="nextArticle" data-next-id="{{nextId}}" data-id="{{id}}"></div>
        {{/if}}
    </div>
</div>