<li class="grid-format" data-index={{allMeta.id}} data-item-id='{{allMeta.pname}}'>
        <a class="details" href="{{baseUrl}}#/page/{{allMeta.pname}}" data-id="{{allMeta.pname}}" data-prev-id="{{prevId}}" data-next-id="{{nextId}}">
            <div class="list-author">{{{HBAuthors allMeta.authors}}}</div>
            <div class="list-title">{{{allMeta.title}}}</div>
            <p>{{{HBTrim allMeta.abstract 140}}}</p>
        </a>
        <div class="cardlinks">
            <div class="card-info">
                <div class="savelist-lnk glyphicon {{HBFaved faved 'glyphicon-minus' 'glyphicon-plus'}}" alt="Add to My Items" data-item-id='{{allMeta.pname}}'></div>
                {{> HBEBook}}
            </div>
        </div>
</li>
